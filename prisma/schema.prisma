generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./consultorio.db"
}

model Patient {
  id             String   @id @default(uuid())
  fullname       String
  dni            String   @unique
  healthEnsurance String
  locality           String
  profession     String
  address        String?
  phone          String?
  email          String?
  age            Int
  createdAt      DateTime @default(now())
  state          String   @default("Registered")
  clinicalStories ClinicalStory[]
  turns           Turn[]
}

model ClinicalStory {
  id           String   @id @default(uuid())
  patientId    String   
  patient      Patient  @relation(fields: [patientId], references: [id])
  createdAt    DateTime @default(now())
  observations String?
  treatmentPlan String?
}

model Turn {
  id         String   @id @default(uuid())
  patientId  String
  patient    Patient  @relation(fields: [patientId], references: [id])
  date       DateTime
  state      String   
  createdAt  DateTime @default(now())
}